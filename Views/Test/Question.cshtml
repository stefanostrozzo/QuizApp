@model Quiz_Task.Controllers.Utils.QuestionDto

@{
    ViewData["Title"] = $"Question {Model.SequenceNumber} of {Model.TotalQuestions}";
}

<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    body {
        background: linear-gradient(135deg, #D3D3D3 0%, #2575fc 100%);
        min-height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 20px;
    }

    .quiz-container {
        background-color: white;
        border-radius: 16px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
        width: 100%;
        max-width: 600px;
        padding: 40px 30px;
        text-align: center;
    }

    .quiz-header h1 {
        color: #333;
        margin-bottom: 10px;
        font-size: 28px;
        font-weight: 700;
    }

    .quiz-header h2 {
        color: #666;
        margin-bottom: 30px;
        font-size: 20px;
        font-weight: 500;
        line-height: 1.5;
    }

    .progress-bar-container {
        width: 100%;
        height: 8px;
        background-color: #e1e5ee;
        border-radius: 4px;
        margin: 25px 0;
        overflow: hidden;
    }

    .progress-bar {
        height: 100%;
        background: linear-gradient(to right, #6a11cb, #2575fc);
        border-radius: 4px;
        transition: width 0.5s ease;
    }

    .options-list {
        display: flex;
        flex-direction: column;
        gap: 12px;
        margin: 30px 0;
    }

    .option-card {
        display: flex;
        align-items: center;
        padding: 16px 20px;
        border: 2px solid #e1e5ee;
        border-radius: 10px;
        background-color: #f8f9fa;
        cursor: pointer;
        transition: all 0.3s ease;
    }

        .option-card:hover {
            border-color: #4d7cfe;
            background-color: #f0f4ff;
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(77, 124, 254, 0.15);
        }

        .option-card input[type="radio"] {
            margin-right: 15px;
            transform: scale(1.2);
        }

        .option-card span {
            flex: 1;
            text-align: left;
            font-size: 16px;
            color: #444;
            font-weight: 500;
        }

    #option-error {
        color: #e74c3c;
        font-size: 14px;
        margin: 15px 0;
        padding: 10px;
        background-color: #ffeaea;
        border-radius: 6px;
        border: 1px solid #ffcdd2;
        display: none;
    }

    .btn-submit {
        background: linear-gradient(to right, #6a11cb, #2575fc);
        color: white;
        border: none;
        border-radius: 8px;
        padding: 16px 30px;
        font-size: 16px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        width: 100%;
        margin-top: 10px;
    }

        .btn-submit:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(37, 117, 252, 0.4);
        }

        .btn-submit:active {
            transform: translateY(0);
        }

        .btn-submit:disabled {
            background: #bdc3c7;
            cursor: not-allowed;
            transform: none;
            box-shadow: none;
        }

    .question-icon {
        font-size: 48px;
        margin-bottom: 15px;
        color: #6a11cb;
    }

    .progress-text {
        color: #666;
        font-size: 14px;
        margin-top: 10px;
        font-weight: 500;
    }

    @@media (max-width: 576px) {
        .quiz-container {
            padding: 30px 20px;
        }

        .quiz-header h1 {
            font-size: 24px;
        }

        .quiz-header h2 {
            font-size: 18px;
        }

        .option-card {
            padding: 14px 16px;
        }

            .option-card span {
                font-size: 15px;
            }
    }
</style>

<div class="quiz-container">
    <div class="quiz-header">
        <div class="question-icon">❓</div>
        <h1>@ViewData["Title"]</h1>
        <h2>@Model.Text</h2>
    </div>

    <div class="progress-bar-container">
        <div class="progress-bar" id="progress-bar-fill"
             style="width: @((int)(((double)Model.SequenceNumber / Model.TotalQuestions) * 100))%;"></div>
    </div>
    <div class="progress-text" id="progress-text">Question @Model.SequenceNumber of @Model.TotalQuestions</div>

    <form id="question-form" method="post" data-session-id="@ViewContext.RouteData.Values["sessionId"]"
          data-question-id="@Model.Id"
          data-current-sequence="@Model.SequenceNumber"
          data-total-questions="@Model.TotalQuestions">

        <input type="hidden" id="questionId" value="@Model.Id" />

        <div class="options-list">
            @foreach (var option in Model.Options)
            {
                <label class="option-card">
                    <input type="radio" name="SelectedOptionId" value="@option.Id" required>
                    <span>@option.Text</span>
                </label>
            }
        </div>

        <div id="option-error">Please select an answer before continuing.</div>

        <button type="submit" class="btn-submit" id="submit-answer-button">Next Question</button>
    </form>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Find main elements
        const form = document.getElementById('question-form');
        const submitButton = document.getElementById('submit-answer-button');
        const originalText = submitButton.textContent;

        form.addEventListener('submit', async function(e) {
            e.preventDefault();

            // Get selected radio button
            const selectedOption = document.querySelector('input[name="SelectedOptionId"]:checked');

            // Client-side validation
            if (!selectedOption) {
                alert('Please select an answer option.');
                return;
            }

            // Disable button and show loading state
            submitButton.disabled = true;
            submitButton.textContent = 'Submitting...';

            // Extract IDs from hidden fields and selected option
            const sessionId = form.getAttribute('data-session-id');
            const questionId = document.getElementById('questionId').value;

            const data = {
                QuestionId: questionId,
                SelectedOptionId: selectedOption.value
            };

            try {
                const response = await fetch(`/Test/Session/${sessionId}/answer`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(data)
                });

                const apiResult = await response.json();

                if (apiResult.success) {
                    const nextId = apiResult.data;

                    // The next ID can be the next Question ID or the Session ID if the quiz is completed
                    const isQuizCompleted = apiResult.message.includes('Quiz completed');

                    if (isQuizCompleted) {
                        // All questions answered: redirect to result view
                        window.location.href = `/Test/Session/${sessionId}/result`;
                    } else {
                        // Redirect to the next 
                        const nextQuestionId = nextId; // nextId is the next Question ID
                        console.log(nextQuestionId);
                        window.location.href = `/Test/Session/${sessionId}/question/${nextQuestionId}`;
                    }

                } else {
                    // Handle API errors (Use apiResult for the correct message)
                    const errorMessage = (apiResult && apiResult.message)
                        ? apiResult.message
                        : 'An unknown error occurred.';

                    alert('Failed to submit answer: ' + errorMessage);

                    // Restore button state in case of an API error
                    submitButton.textContent = originalText;
                    submitButton.disabled = false;
                }

            } catch (error) {
                // Network or system error handling (console.error removed for production)
                alert('An unexpected error occurred while submitting the answer: ' + error.message);

                // Restore button state in case of a network error
                submitButton.textContent = originalText;
                submitButton.disabled = false;
            }
        });

        // Add focus effects for accessibility and better UX
        const radioInputs = document.querySelectorAll('input[type="radio"]');
        radioInputs.forEach(input => {
            input.addEventListener('focus', function() {
                this.closest('.option-card').style.boxShadow = '0 0 0 3px rgba(77, 124, 254, 0.3)';
            });

            input.addEventListener('blur', function() {
                this.closest('.option-card').style.boxShadow = '';
            });
        });
    });
</script>