@model Quiz_Task.Models.UserSession

@{
    ViewData["Title"] = "Quiz Results";

    // --- BEST PRACTICE: Calculations should ideally be done in the Controller or a Service,
    // but for a simple result view, calculation in the Razor block is acceptable. ---

    // 1. Calculate correct answers and percentage
    int correctAnswers = Model.Answers.Count(a => a.IsCorrect);

    // NOTE ON ROBUSTNESS: We assume the total number of questions is equal to the number of answers submitted.
    // For full robustness, the 'Test' entity's TotalQuestions property should be used here,
    // which requires passing it from the controller or retrieving it using the TestId.
    int totalQuestionsAnswered = Model.Answers.Count;

    double scorePercentage = totalQuestionsAnswered > 0
        ? ((double)correctAnswers / totalQuestionsAnswered) * 100
        : 0;

    // 2. Determine result message and icon (70% threshold)
    string resultMessage = scorePercentage >= 70
        ? "Congratulations! You passed the quiz."
        : "You completed the quiz. Review your answers to improve.";
    string resultIcon = scorePercentage >= 70 ? "🏆" : "🤔";

    // 3. Calculate elapsed time
    string duration = "N/A";
    if (Model.StartTime.HasValue && Model.EndTime.HasValue)
    {
        TimeSpan elapsed = Model.EndTime.Value.Subtract(Model.StartTime.Value);
        // Format as 'Xm Ys' (e.g., 3m 45s)
        duration = $"{(int)elapsed.TotalMinutes}m {elapsed.Seconds}s";
    }
}

<style>
    /* Styles consistent with Question.cshtml and List.cshtml */
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    body {
        /* Gradient background matching the other pages */
        background: linear-gradient(135deg, #D3D3D3 0%, #2575fc 100%);
        min-height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 20px;
    }

    .quiz-container {
        background-color: white;
        border-radius: 16px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
        width: 100%;
        max-width: 600px; /* Wider than List, similar to Question */
        padding: 40px 30px;
        text-align: center;
    }

    .quiz-header h1 {
        color: #333;
        margin-bottom: 10px;
        font-size: 28px;
        font-weight: 700;
    }

    .quiz-header h2 {
        color: #666;
        margin-bottom: 20px;
        font-size: 18px;
        font-weight: 400;
    }

    .result-icon {
        font-size: 60px;
        margin-bottom: 15px;
    }

    /* Stats Grid for a clear summary presentation */
    .stats-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 20px;
        margin-top: 20px;
        margin-bottom: 40px;
    }

    .stat-card {
        background-color: #f7f7f7;
        border-radius: 12px;
        padding: 15px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.05);
    }

        .stat-card h3 {
            font-size: 16px;
            color: #777;
            margin-bottom: 5px;
            font-weight: 500;
        }

        .stat-card p {
            font-size: 22px;
            font-weight: 700;
            color: #333;
        }

        /* Highlight for correct answers */
        .stat-card.correct {
            border: 2px solid #28a745;
            background-color: #e6ffed;
        }

            .stat-card.correct p {
                color: #28a745;
            }

    /* Return Button Style */
    .btn-return {
        background-color: #2575fc;
        color: white;
        border: none;
        padding: 12px 25px;
        border-radius: 8px;
        font-size: 18px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        text-decoration: none; /* Removes underline for anchor tag */
        display: inline-block;
    }

        .btn-return:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(37, 117, 252, 0.4);
            color: white; /* Maintain white color on hover */
        }

    /* Responsive adjustment for mobile devices */
    @@media (max-width: 576px) {
        .quiz-container {
            padding: 30px 20px;
        }

        .stats-grid {
            /* Stack columns on small screens */
            grid-template-columns: 1fr;
        }
    }
</style>

<div class="quiz-container">
    <div class="quiz-header">
        <div class="result-icon">@resultIcon</div>
        <h1>Quiz Completed</h1>
        <h2>@resultMessage</h2>
    </div>

    @* Display the main score prominently *@
    <p style="font-size: 24px; font-weight: 600; margin-bottom: 30px; color: #6a11cb;">
        Final Score: @scorePercentage.ToString("F0")%
    </p>

    @* Display detailed statistics in a grid *@
    <div class="stats-grid">
        <div class="stat-card correct">
            <h3>Correct Answers</h3>
            <p>@correctAnswers</p>
        </div>

        <div class="stat-card">
            <h3>Total Questions</h3>
            <p>@totalQuestionsAnswered</p>
        </div>

        <div class="stat-card">
            <h3>Time Spent</h3>
            <p>@duration</p>
        </div>
    </div>

    @* Call to action button to return to the starting page *@
    <a href="/Test/List" class="btn-return">Return to Homepage</a>
</div>