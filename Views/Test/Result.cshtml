@model Quiz_Task.Models.UserSession

@{
    ViewData["Title"] = "Quiz Results";

    // Calcola il totale delle domande e le risposte corrette
    int correctAnswers = Model.Answers.Count(a => a.IsCorrect);
    // Assumiamo che il totale delle domande sia il conteggio delle risposte date, se non abbiamo il Test completo.
    // In un'applicazione reale, dovresti passare il Test completo o il numero totale di domande qui.
    int totalQuestionsAnswered = Model.Answers.Count;
    double scorePercentage = totalQuestionsAnswered > 0 ? ((double)correctAnswers / totalQuestionsAnswered) * 100 : 0;
    string resultMessage = scorePercentage >= 70 ? "Congratulations! You passed the quiz." : "You completed the quiz. Review your answers to improve.";
    string resultIcon = scorePercentage >= 70 ? "🏆" : "🤔";

    // Calcola il tempo impiegato
    string duration = "N/A";
    if (Model.StartTime.HasValue && Model.EndTime.HasValue)
    {
        TimeSpan elapsed = Model.EndTime.Value.Subtract(Model.StartTime.Value);
        duration = $"{(int)elapsed.TotalMinutes}m {elapsed.Seconds}s";
    }
}

<style>
    /* Stili coerenti con Question.cshtml */
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    body {
        background: linear-gradient(135deg, #D3D3D3 0%, #2575fc 100%);
        min-height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 20px;
    }

    .quiz-container {
        background-color: white;
        border-radius: 16px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
        width: 100%;
        max-width: 600px;
        padding: 40px 30px;
        text-align: center;
    }

    .quiz-header h1 {
        color: #333;
        margin-bottom: 10px;
        font-size: 28px;
        font-weight: 700;
    }

    .quiz-header h2 {
        color: #666;
        margin-bottom: 30px;
        font-size: 20px;
        font-weight: 500;
        line-height: 1.5;
    }

    .result-icon {
        font-size: 60px;
        margin-bottom: 20px;
    }

    .stats-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
        gap: 20px;
        margin: 30px 0;
        text-align: left;
    }

    .stat-card {
        background-color: #f8f9fa;
        padding: 20px;
        border-radius: 10px;
        border-left: 5px solid #2575fc;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.05);
    }

        .stat-card h3 {
            color: #666;
            font-size: 14px;
            margin-bottom: 5px;
            font-weight: 500;
            text-transform: uppercase;
        }

        .stat-card p {
            color: #333;
            font-size: 24px;
            font-weight: 700;
        }

        .stat-card.correct {
            border-left-color: #27ae60; /* Green for success */
        }

        .stat-card.time {
            border-left-color: #f39c12; /* Orange for time */
        }

    .btn-return {
        background: linear-gradient(to right, #6a11cb, #2575fc);
        color: white;
        border: none;
        border-radius: 8px;
        padding: 16px 30px;
        font-size: 16px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        width: 100%;
        margin-top: 20px;
        text-decoration: none; /* Rimuove la sottolineatura per l'anchor tag */
        display: inline-block;
    }

        .btn-return:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(37, 117, 252, 0.4);
            color: white; /* Mantiene il colore bianco al passaggio del mouse */
        }

    @@media (max-width: 576px) {
        .quiz-container {
            padding: 30px 20px;
        }

        .stats-grid {
            grid-template-columns: 1fr;
        }
    }
</style>

<div class="quiz-container">
    <div class="quiz-header">
        <div class="result-icon">@resultIcon</div>
        <h1>Quiz Completed</h1>
        <h2>@resultMessage</h2>
    </div>

    <p style="font-size: 24px; font-weight: 600; margin-bottom: 30px; color: #6a11cb;">
        Final Score: @scorePercentage.ToString("F0")%
    </p>

    <div class="stats-grid">
        <div class="stat-card correct">
            <h3>Correct Answers</h3>
            <p>@correctAnswers</p>
        </div>

        <div class="stat-card">
            <h3>Total Questions</h3>
            <p>@totalQuestionsAnswered</p>
        </div>

        <div class="stat-card time">
            <h3>Time Taken</h3>
            <p>@duration</p>
        </div>

        <div class="stat-card">
            <h3>Username</h3>
            <p>@Model.UserName</p>
        </div>
    </div>

    <a href="/Test/List" class="btn-return">Return to Test List</a>
</div>